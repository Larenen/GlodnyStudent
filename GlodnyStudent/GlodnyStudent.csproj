    <Content Include="ClientApp\scss\custom.scss" />
    <Content Include="ClientApp\src\App.js" />
    <Content Include="ClientApp\src\App.test.js" />
    <Content Include="ClientApp\src\components\assets\homeBackground.jpg" />
