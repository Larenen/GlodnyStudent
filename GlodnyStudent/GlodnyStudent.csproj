    <Compile Remove="Migrations\20190523162758_GlodnyStudentMigration.Designer.cs" />
    <Compile Remove="Migrations\20190523180137_FirstMigration.cs" />
    <Compile Remove="Migrations\20190523180137_FirstMigration.Designer.cs" />
    <Compile Remove="Migrations\20190523182352_SecondMigration.cs" />
    <Compile Remove="Migrations\20190523182352_SecondMigration.Designer.cs" />
    <Compile Remove="Migrations\20190523182912_FirstMigration.cs" />
    <Compile Remove="Migrations\20190523182912_FirstMigration.Designer.cs" />
    <Compile Remove="Migrations\20190525195016_FirstMigration.cs" />
    <Compile Remove="Migrations\20190525195016_FirstMigration.Designer.cs" />
    <Compile Remove="Migrations\20190527144014_Fix.cs" />
    <Compile Remove="Migrations\20190527144014_Fix.Designer.cs" />
    <Compile Remove="Migrations\20190529222139_Regex MenuItem Name Off.cs" />
    <Compile Remove="Migrations\20190529222139_Regex MenuItem Name Off.Designer.cs" />
  </ItemGroup>

  <ItemGroup>
